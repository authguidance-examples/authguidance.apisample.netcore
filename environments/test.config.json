{
  "api": {
    "port": 445,
    "sslCertificateFileName": "../../../certs/authsamples-dev.ssl.p12",
    "sslCertificatePassword": "Password1",
    "useProxy": false,
    "proxyUrl": "http://127.0.0.1:8888"
  },
  "logging": {
    "apiName": "SampleApi",
    "production": {
      "level": "Info",
      "performanceThresholdMilliseconds": 500,
      "appenders": [
        {
          "type": "console",
          "prettyPrint": true
        },
        {
          "type": "file",
          "filePrefix": "api",
          "dirName": "./logs/",
          "maxSize": "10MB",
          "maxFiles": "100"
        }
      ]
    },
    "development": {
      "level": "Info",
      "overrideLevels": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Server.Kestrel": "Error",
        "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
        "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error",
        "SampleApi.Plumbing.Claims.ClaimsCache": "Info"
      }
    }
  },
  "oauth": {
    "provider":                      "cognito",
    "issuer":                        "testissuer.com",
    "audience":                      "api.mycompany.com",
    "jwksEndpoint":                  "http://login.authsamples-dev.com:446/.well-known/jwks.json",
    "userInfoEndpoint":              "http://login.authsamples-dev.com:446/oauth2/userInfo",
    "claimsCacheTimeToLiveMinutes":  30
  }
}
