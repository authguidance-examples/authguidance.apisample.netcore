{
    "api": {
        "port": 8101,
        "sslCertificateFileName": "",
        "sslCertificatePassword": "",
        "useProxy": false,
        "proxyUrl": "http://127.0.0.1:8888",
        "webTrustedOrigins": [
            "https://web-garcher.eu.ngrok.io"
        ]
    },
    "logging": {
        "apiName": "SampleApi",
        "production": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console",
                    "prettyPrint": true
                },
                {
                    "type": "file",
                    "filePrefix": "api",
                    "dirName": "./logs/",
                    "maxSize": "10MB",
                    "maxFiles": "100"
                }
            ],
            "performanceThresholdsMilliseconds": {
                "default": 250
            }
        },
        "development": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console"
                }
            ],
            "overrideLevels": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
                "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error"
            }
        }
    },
    "oauth": {
        "strategy":                      "standard",
        "issuer":                        "https://login-garcher.eu.ngrok.io/oauth/v2/oauth-anonymous",
        "audience":                      "api-garcher.eu.ngrok.io",
        "tokenValidationStrategy":       "jwt",
        "jwksEndpoint":                  "https://login-garcher.eu.ngrok.io/oauth/v2/oauth-anonymous/jwks",
        "introspectEndpoint":            "",
        "introspectClientId":            "",
        "introspectClientSecret":        "",
        "userInfoEndpoint":              "",
        "claimsCacheTimeToLiveMinutes":  0
    }
}
