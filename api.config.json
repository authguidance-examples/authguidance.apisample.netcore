{
    "api": {
        "port": 444,
        "sslCertificateFileName": "../../../certs/local/mycompany.com.ssl.p12",
        "sslCertificatePassword": "Password1",
        "useProxy": false,
        "proxyUrl": "http://127.0.0.1:8888",
        "webTrustedOrigins": [
            "https://web.mycompany.com"
        ]
    },
    "logging": {
        "apiName": "SampleApi",
        "production": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console",
                    "prettyPrint": true
                },
                {
                    "type": "file",
                    "filePrefix": "api",
                    "dirName": "./logs/",
                    "maxSize": "10MB",
                    "maxFiles": "100"
                }
            ],
            "performanceThresholdsMilliseconds": {
                "default": 250,
                "operationOverrides": {
                    "Authorizer": 1000
                }
            }
        },
        "development": {
            "level": "Info",
            "overrideLevels": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
                "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error",
                "SampleApi.Plumbing.Claims.ClaimsCache": "Info"
            }
        }
    },
    "oauth": {
        "authority":     "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_qqJgVeuTn",
        "clientId":      "",
        "clientSecret":  ""
    },
    "claims": {
        "maxCacheMinutes": 30
    }
}
