
{
    "api": {
        "port": 8101,
        "sslCertificateFileName": "./certs/keystore.p12",
        "sslCertificatePassword": "Password1",
        "useProxy": false,
        "proxyUrl": "",
        "webTrustedOrigins": [
            "https://web.mycluster.com"
        ]
    },
    "logging": {
        "apiName": "SampleApi",
        "production": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console",
                    "prettyPrint": false
                }
            ],
            "performanceThresholdsMilliseconds": {
                "default": 250
            }
        },
        "development": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console"
                }
            ],
            "overrideLevels": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
                "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error"
            }
        }
    },
    "oauth": {
        "authority":     "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_qqJgVeuTn",
        "clientId":      "",
        "clientSecret":  ""
    },
    "claims": {
        "maxCacheMinutes": 30
    }
}
