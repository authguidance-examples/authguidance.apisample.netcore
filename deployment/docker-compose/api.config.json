{
    "api": {
        "port": 8000,
        "sslCertificateFileName": "./certs/mycompany.internal.ssl.p12",
        "sslCertificatePassword": "Password1",
        "useProxy": false,
        "proxyUrl": "",
        "webTrustedOrigins": [
            "https://web.mycompany.com"
        ]
    },
    "logging": {
        "apiName": "SampleApi",
        "production": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console",
                    "prettyPrint": true
                },
                {
                    "type": "file",
                    "filePrefix": "api",
                    "dirName": "./logs/",
                    "maxSize": "10MB",
                    "maxFiles": "100"
                  }
            ],
            "performanceThresholdsMilliseconds": {
                "default": 250
            }
        },
        "development": {
            "level": "Info",
            "appenders": [
                {
                    "type": "console"
                }
            ],
            "overrideLevels": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
                "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error"
            }
        }
    },
    "oauth": {
        "strategy":                      "standard",
        "issuer":                        "https://login.mycompany.com/oauth/v2/oauth-anonymous",
        "audience":                      "api.mycompany.com",
        "tokenValidationStrategy":       "jwt",
        "jwksEndpoint":                  "https://login.mycompany.internal:8443/oauth/v2/oauth-anonymous/jwks",
        "introspectEndpoint":            "",
        "introspectClientId":            "",
        "introspectClientSecret":        "",
        "userInfoEndpoint":              "",
        "claimsCacheTimeToLiveMinutes":  0
    }
}
