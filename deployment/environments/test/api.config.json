{
  "api": {
    "port": 446,
    "sslCertificateFileName": "../../../certs/authsamples-dev.ssl.p12",
    "sslCertificatePassword": "Password1",
    "useProxy": false,
    "proxyUrl": "http://127.0.0.1:8888"
  },
  "logging": {
    "apiName": "SampleApi",
    "production": {
      "level": "Info",
      "performanceThresholdMilliseconds": 500,
      "appenders": [{
        "type": "console",
        "prettyPrint": true
      },
      {
        "type": "file",
        "filePrefix": "api",
        "dirName": "../../../../oauth.logs/api/",
        "maxSize": "10MB",
        "maxFiles": "100"
      }]
    },
    "development": {
      "level": "Info",
      "overrideLevels": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Server.Kestrel": "Error",
        "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
        "SampleApi.Plumbing.Middleware.CustomAuthenticationHandler": "Error",
        "SampleApi.Plumbing.Claims.ClaimsCache": "Info"
      }
    }
  },
  "oauth": {
    "issuer":                       "https://login.authsamples-dev.com",
    "audience":                     "api.mycompany.com",
    "scope":                        "investments",
    "jwksEndpoint":                 "https://login.authsamples-dev.com:447/.well-known/jwks.json",
    "claimsCacheTimeToLiveMinutes": 15
  }
}
