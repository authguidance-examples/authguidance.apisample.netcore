{
  "api": {
    "port": 3446,
    "sslCertificateFileName": "../../../certs/authsamples-dev.ssl.p12",
    "sslCertificatePassword": "Password1",
    "useProxy": false,
    "proxyUrl": "http://127.0.0.1:8888"
  },
  "logging": {
    "apiName": "SampleApi",
    "production": {
      "level": "Info",
      "performanceThresholdMilliseconds": 500,
      "appenders": [{
        "type": "console",
        "prettyPrint": true
      },
      {
        "type": "file",
        "filePrefix": "api",
        "dirName": "../../../../oauth.logs/api/",
        "maxSize": "10MB",
        "maxFiles": "100"
      }]
    },
    "development": {
      "level": "Info",
      "overrideLevels": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Server.Kestrel": "Error",
        "Microsoft.AspNetCore.DataProtection.KeyManagement": "Error",
        "SampleApi.Plumbing.Security.CustomAuthenticationHandler": "Error",
        "SampleApi.Plumbing.OAuth.ClaimsCaching.ClaimsCache": "Info"
      }
    }
  },
  "oauth": {
    "issuer":       "testissuer.com",
    "audience":     "api.mycompany.com",
    "jwksEndpoint": "https://login.authsamples-dev.com:3447/.well-known/jwks.json",
    "claimsStrategy": "apiLookup",
    "claimsCache": {
      "userInfoEndpoint":   "https://login.authsamples-dev.com:3447/oauth2/userInfo",
      "timeToLiveMinutes":  15
    }
  }
}
